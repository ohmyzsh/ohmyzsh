            && ret=0
        ;;
      esac
    ;;
    (timechart_args)
      if [[ $words[1] == "record" ]]; then
        _arguments \
          '(-P --power-only)'{-P,--power-only}'[record only power-related events]' \
          '(-T --tasks-only)'{-T,--tasks-only}'[record only tasks-related events]' \
          '(-I --io-only)'{-I,--io-only}'[record only io-related events]' \
