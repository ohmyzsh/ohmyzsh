            '*::args:_normal' \
            && ret=0
        ;;
      esac
    ;;
    (sched_args)
      case $words[1] in
        (record)
          _arguments \
          '1:command:_command_names -e' \
          '*::args:_normal' \
          && ret=0
        ;;
        (map)
          _arguments \
            '--compact[show only CPUs with activity]' \
            '--cpus[show just entries with activities]' \
