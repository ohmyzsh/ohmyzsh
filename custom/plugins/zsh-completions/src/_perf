            && ret=0
          ;;
        *)
          _call_function ret _perf_cmd_$words[1] && ret=0
          (( ret )) && _message 'no more arguments'
        ;;
      esac
    ;;
  esac

  case $state in
    (bench_subsystem)
      case $words[1] in
        (sched)
          _arguments \
            '1:suite:(messaging pipe)' \
            '*:: :->bench_sched_suite' \
            && ret=0
        ;;
        (mem)
          _arguments \
            '1:suite:(memcpy memset)' \
            '*:: :->bench_mem_suite' \
            && ret=0
        ;;
        (numa)
          _arguments \
            '1:suite:(mem)' \
            && ret=0
        ;;
        (futex)
          _arguments \
            '1:suite:(hash wake wake-parallel requeue lock-pi)' \
            && ret=0
        ;;
        (epoll)
          _arguments \
            '1:suite:(wait ctl)' \
            && ret=0
        ;;
      esac
    ;;
    (c2c_args)
      case $words[1] in
        (record)
          _arguments \
            \*{-e,--event=}'[select the PMU event]:events:_perf_events' \
            '(-v --verbose)'{-v,--verbose}'[be more verbose]' \
            '(-l --ldlat)'{-l,--ldlat=}'[configure mem-loads latency]:latency:' \
