          '--all[convert all events including non-sample events to output]' \
          && ret=0
      fi
    ;;
    (kmem_args)
      if [[ $words[1] == "record" ]]; then
        _arguments \
          '1:command:_command_names -e' \
          '*::args:_normal' \
          && ret=0
      fi
    ;;
    (lock_args)
      case $words[1] in
